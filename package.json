{
  "name": "open-source-ua-bot",
  "version": "0.1.0",
  "description": "Telegram automation and posting bot for Open Source Ukraine community",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx src/cli.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "telegram",
    "bot",
    "ukraine",
    "open-source",
    "automation",
    "typescript"
  ],
  "author": "Open Source UA",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "tsx": "^4.15.7",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "grammy": "^1.23.0",
    "telegramify-markdown": "^1.3.0",
    "zod": "^3.23.8"
  }
}
